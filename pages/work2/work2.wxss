.timer {
  background:#fff;
  border:1px solid #ccc;
  width:96%;
  margin:20rpx auto;
  border-radius: 10rpx;
  box-shadow:#ccc 0 4rpx 10rpx 4rpx;
  padding-bottom:10rpx;
}
.timer .address {
  margin:20rpx 40rpx;
  color:black;
  font-size: 16pt;
}
.timer .address .help {
  color:#66b100;
  font-size: 14pt;
  display: inline-flex;
  float: right;
}
.timer .address .help image {
  height:50rpx;
  width:50rpx;
}
.timer .remaining {
  margin:0 auto;
  text-align: center;
}
.timer .remaining>text {
  color:#66b100;
  display: inline-block;
  background: #fff;
  padding:0 40rpx;
  letter-spacing:12rpx;
  font-weight: 300;
}
.timer .remaining>view { 
  width:90%;
  border-bottom: 1px solid #eee;
  margin:0 auto;
  margin-top: -20rpx;
}
.timer .countdown {
  text-align: center;
}
.timer .countdown text:first-child {
  display: block;
  color:#66b100;
  font-size: 40pt;
  font-weight: bold;
  line-height:160rpx;
}
.timer .countdown text:last-child {
  color:#aaa;
  font-size: 11pt;
}

